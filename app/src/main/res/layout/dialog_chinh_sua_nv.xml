<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8BFD8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:layout_marginTop="15dp"
        android:textColor="#FC000000"
        android:layout_marginRight="115dp"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_csnv_hoten"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/custom_edt_csnv"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuổi"
        android:layout_marginRight="125dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textColor="#FC000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_csnv_tuoi"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edt_csnv"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giới tính"
        android:layout_marginTop="15dp"
        android:layout_marginRight="111dp"
        android:layout_gravity="center"
        android:textColor="#FC000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_csnv_gioitinh"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edt_csnv"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:layout_marginTop="15dp"
        android:layout_marginRight="89dp"
        android:layout_gravity="center"
        android:textColor="#FC000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_csnv_sdt"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edt_csnv"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:layout_marginTop="15dp"
        android:layout_marginRight="105dp"
        android:layout_gravity="center"
        android:textColor="#FC000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_csnv_matkhau"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edt_csnv"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_csnv_luu"
        android:layout_width="157dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_btn_csnv"
        android:text="Luu"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>