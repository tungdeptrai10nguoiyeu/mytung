<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_themnv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edt_tnv_id"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ID:"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_tnv_hoten"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:text="Họ tên:"
            android:textColorHighlight="#B14848" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_tnv_sdt"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:text="Số điện thoại:" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_tnv_level"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:text="level:" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_tnv_gioi_tinh"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:text="Giới tính:" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_tnv_dia_chi"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:text="Địa chỉ:" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_tnv_tai_khoan"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:text="Tài khoản:" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_tnv_mat_khau"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:text="Mật khẩu:" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_tnv_ngay_vao_lam"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_edt_themnv"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:text="Ngày vào làm:" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_tnv_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/cutstom_btn_themnv"
            android:text="Thêm" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>